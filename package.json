{
  "name": "@bluecateng/smooth-reorder",
  "version": "1.0.1",
  "description": "Smooth list reordering in vanilla JS",
  "license": "ISC",
  "main": "index.mjs",
  "types": "index.d.ts",
  "scripts": {
    "build:es5": "BABEL_ENV=es5 babel -o index.es5 src",
    "build:es6": "BABEL_ENV=es6 babel -o index.mjs src",
    "build": "npm run build:es5 && npm run build:es6",
    "test": "jest",
    "test-ci": "npm ci && jest --ci --silent --reporters=jest-junit",
    "prepack": "npm t && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bluecatengineering/smooth-reorder.git"
  },
  "keywords": [
    "reorder",
    "dnd",
    "vanilla"
  ],
  "files": [
    "index.es5",
    "index.mjs",
    "index.d.ts"
  ],
  "dependencies": {
    "@bluecateng/nano-spring": "^1.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/preset-env": "^7.9.6",
    "@bluecateng/eslint-config-core": "^1.2.1",
    "@bluecateng/git-checks": "^0.3.0",
    "babel-preset-minify": "^0.5.1",
    "eslint": "^7.0.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.2.4",
    "prettier": "^2.0.5"
  },
  "eslintConfig": {
    "extends": [
      "@bluecateng/core"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "jest": true
    }
  },
  "jest": {
    "automock": true,
    "clearMocks": true,
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "timers": "fake",
    "transform": {
      "\\.m?js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@bluecateng/)"
    ]
  },
  "jest-junit": {
    "outputDirectory": "build",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " / "
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "check-git-msg",
      "pre-push": "check-git-commits"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --max-warnings 0 --no-ignore",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
