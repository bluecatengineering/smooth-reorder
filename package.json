{
  "name": "@bluecateng/smooth-reorder",
  "version": "1.0.1",
  "description": "Smooth list reordering in vanilla JS",
  "license": "ISC",
  "main": "index.mjs",
  "types": "index.d.ts",
  "scripts": {
    "build:es5": "BABEL_ENV=es5 babel -o index.es5 src",
    "build:es6": "BABEL_ENV=es6 babel -o index.mjs src",
    "build": "npm run build:es5 && npm run build:es6",
    "test": "jest",
    "test-ci": "npm ci && jest --ci --silent --reporters=jest-junit",
    "prepack": "npm t && npm run build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bluecatengineering/smooth-reorder.git"
  },
  "keywords": [
    "reorder",
    "dnd",
    "vanilla"
  ],
  "files": [
    "index.es5",
    "index.mjs",
    "index.d.ts"
  ],
  "dependencies": {
    "@bluecateng/nano-spring": "^1.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/preset-env": "^7.15.8",
    "@bluecateng/eslint-config-core": "^3.0.0",
    "@bluecateng/git-checks": "^1.0.0",
    "@bluecateng/prettier-config": "^1.0.0",
    "babel-preset-minify": "^0.5.1",
    "eslint": "^8.1.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-junit": "^13.0.0",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.0"
  },
  "eslintConfig": {
    "extends": [
      "@bluecateng/core"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "jest": true
    }
  },
  "jest": {
    "automock": true,
    "clearMocks": true,
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testEnvironment": "jsdom",
    "timers": "fake",
    "transform": {
      "\\.m?js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@bluecateng/)"
    ]
  },
  "jest-junit": {
    "outputDirectory": "build",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " / "
  },
  "prettier": "@bluecateng/prettier-config",
  "lint-staged": {
    "*.js": [
      "eslint --fix --max-warnings 0 --no-ignore",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
